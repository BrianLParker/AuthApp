<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href=""><img src="images/icon-144x144.png" height="32" width="32" class="mr-3"/>Auth App</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
              <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <AuthorizeView>
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="claims">
                    <span class="oi oi-info" aria-hidden="true"></span> Claims
                </NavLink>
            </li>
        </AuthorizeView>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="counter">
                <span class="oi oi-plus" aria-hidden="true"></span> Counter
            </NavLink>
        </li>
        <AuthorizeView Context="authorized">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="fetchdata">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Fetch data
                </NavLink>
            </li>
            <AuthorizeView Roles="@Roles.Administrator" >
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="admins">
                        <span class="oi oi-key" aria-hidden="true"></span> Administrators Only
                    </NavLink>
                </li>
            </AuthorizeView>
            <AuthorizeView Policy="@Policies.VerifiedAdult">
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="adults">
                        <span class="oi oi-key" aria-hidden="true"></span> Adults Only
                    </NavLink>
                </li>
            </AuthorizeView>
        </AuthorizeView>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
